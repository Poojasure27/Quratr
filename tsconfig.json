{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@types/*": ["types/*"],
      "@/*": ["./*"]
    },
    "typeRoots": ["types", "node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src",
    "src/@types" // Add this line to include the custom types
  ],
  "exclude": ["node_modules"]
}
